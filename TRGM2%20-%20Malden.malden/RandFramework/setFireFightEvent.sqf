[_eventLocationPos] spawn {
	_eventLocationPos = _this select 0;
	while {WarEventActive} do {
		_type = selectRandom ["Bomb_03_F","Missile_AA_04_F","M_Mo_82mm_AT_LG"];
		_xPos = (_eventLocationPos select 0)-125;
